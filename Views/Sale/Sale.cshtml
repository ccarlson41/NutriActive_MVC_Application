@model IEnumerable<SaleModel>

@{
    ViewData["Title"] = "Sale";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/tables.css">
    <!--
    Description: Page responsible for displaying the sale start and end dates
    Last Updated: 5/5/24
    -->
</head>
<body>

    <h1 style="color: white;">@ViewData["Title"]</h1>

    <div class="row">
        <div class="col-md-8 offset-md-2">

            <table>
                <thead>
                    <tr>
                        <th>Start</th>
                        <th>End</th>
                        <th>SalePercentage</th>
                        <th>Actions (to be implemented)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="align-middle">@Html.DisplayFor(modelItem => item.StartDate)</td>
                            <td class="align-middle">@Html.DisplayFor(modelItem => item.EndDate)</td>
                            <td class="align-middle">@Html.DisplayFor(modelItem => item.SalesPercentage)</td>
                        </tr>
                    }
                </tbody>

            </table>

        </div>
    </div>

</body>
</html>